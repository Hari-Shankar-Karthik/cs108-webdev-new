<%- include('partials/prelogin_header.ejs') %>

    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 container display-box mt-5">
            <form action="/forgot" method="post" id="secret_question_form">
                <legend>Recover your password</legend>
                <div class="mb-3 row">
                    <div class="col-md-4">
                        <label class="form-label" for="username">Username</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="username" id="username" readonly value="<%= username %>">
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-4">
                        <label class="form-label" for="secret_question">Secret Question</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="secret_question" id="secret_question" readonly value="<%= secret_question %>">
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-md-4">
                        <label class="form-label" for="secret_answer">Answer</label>
                    </div>
                    <div class="col-md-8">
                        <input class="form-control" type="text" name="secret_answer" id="secret_answer">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Recover Password</button>
            </form>
        </div>
    </div>

<%- include('partials/footer.ejs') %>